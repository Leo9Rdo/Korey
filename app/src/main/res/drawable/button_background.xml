<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- цвет при нажатии -->
            <corners android:radius="50dp"/> <!-- радиус закругления углов -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- цвет по умолчанию -->
            <corners android:radius="50dp"/> <!-- радиус закругления углов -->
        </shape>
    </item>
</selector>
